{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithProcessId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext:l} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ExceptionHandling": {
    "IncludeExceptionDetails": false,
    "ExceptionStatusCodeMap": {
      "RSM.Socar.CRM.Domain.Common.NotFoundException": 404,
      "RSM.Socar.CRM.Domain.Common.ForbiddenException": 403,
      "System.ArgumentException": 400,
      "System.InvalidOperationException": 409
    }
  },
  "RequestResponseLogging": {
    "Enabled": true,
    "IncludeHeaders": false,
    "MaxBodySizeKb": 256,
    "ExcludePaths": [ "/health", "/swagger" ],
    "IncludeContentTypes": [
      "application/json",
      "application/*+json",
      "application/odata+json"
    ]
  },
  "OpenTelemetry": {
    "TraceSamplingRate": 1.0,
    "Otlp": {
      "Endpoint": "https://localhost:18889",
      "Headers": ""
    }
  },
  "ConnectionStrings": {
    "Sql": "Server=192.168.7.22;Database=RMASocarCRM;User Id=sa;Password=SAPB1Admin;Encrypt=False;"
  },
  "Jwt": {
    "Issuer": "RSM.Socar.CRM",
    "Audience": "RSM.Socar.CRM.Client",
    "SigningKey": "change-this-to-a-long-random-secret-64-bytes-minimum",
    "AccessTokenMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
